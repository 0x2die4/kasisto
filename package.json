{
  "name": "kasisto",
  "private": true,
  "version": "0.0.1",
  "description": "A Monero Point of Sale payment system",
  "repository": "https://github.com/amiuhle/kasisto",
  "keywords": [
    "monero",
    "xmr",
    "point-of-sale",
    "payment-system",
    "cryptocurrency"
  ],
  "author": "Timo Uhlmann",
  "main": "src/index.js",
  "scripts": {
    "start": "npm run serve:dev",
    "test": "yarn lint; yarn jest",
    "posttest": "npm run lint",
    "test:watch": "jest --watch",
    "serve:dev": "webpack-dev-server --env dev",
    "serve:dist": "webpack-dev-server --env dist --progress",
    "dist": "npm run clean && npm run copy && webpack --progress --bail --env dist",
    "publish:staging": "yarn run dist && gh-pages -d dist",
    "lint": "standard ./src",
    "clean": "rimraf dist/*",
    "copy": "copyfiles -f ./src/index.html ./dist && copyfiles -u 1 \"./src/static/**\" ./dist",
    "release:major": "npm version prerelease && git push --follow-tags && npm publish --tag beta",
    "release:minor": "npm version prerelease && git push --follow-tags && npm publish --tag beta",
    "release:patch": "npm version prerelease && git push --follow-tags && npm publish --tag beta"
  },
  "devDependencies": {
    "babel-core": "^6.7.6",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-istanbul": "^4.0.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-preset-airbnb": "^2.0.0",
    "babel-preset-es2015-native-modules": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.22.0",
    "chai": "^3.5.0",
    "copyfiles": "^1.0.0",
    "css-loader": "^0.26.0",
    "enzyme": "^2.2.0",
    "file-loader": "^0.10.0",
    "gh-pages": "^0.12.0",
    "jest": "^19.0.2",
    "karma": "^1.0.0",
    "karma-chai": "^0.1.0",
    "karma-coverage": "^1.0.0",
    "karma-junit-reporter": "^1.0.0",
    "karma-mocha": "^1.0.1",
    "karma-mocha-reporter": "^2.0.3",
    "karma-phantomjs-launcher": "^1.0.0",
    "karma-sinon": "^1.0.5",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.2",
    "mocha": "^3.0.0",
    "nock": "^9.0.13",
    "node-sass": "^4.5.0",
    "null-loader": "^0.1.1",
    "phantomjs-prebuilt": "^2.1.7",
    "postcss": "^5.0.21",
    "postcss-loader": "^1.3.1",
    "react-addons-test-utils": "^15.0.1",
    "react-test-renderer": "^15.4.2",
    "redux-mock-store": "^1.2.3",
    "rimraf": "^2.5.2",
    "sass-loader": "^6.0.1",
    "sinon": "^1.17.3",
    "standard": "^9.0.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack-dev-server": "^2.1.0-beta"
  },
  "dependencies": {
    "cross-env": "^3.2.3",
    "history": "^4.6.1",
    "inuitcss": "https://github.com/inuitcss/inuitcss.git#develop",
    "monero-nodejs": "https://github.com/amiuhle/monero-nodejs.git#fetch-only",
    "qrcode.react": "^0.6.1",
    "react": "^15.0.1",
    "react-dom": "^15.0.1",
    "react-hot-loader": "^3.0.0-beta.6",
    "react-redux": "^5.0.2",
    "react-router-dom": "^4.1.1",
    "redux": "^3.6.0",
    "redux-logger": "^3.0.6",
    "redux-thunk": "^2.2.0",
    "uuid": "^3.0.1",
    "webpack": "^2.1.0-beta.6"
  },
  "jest": {
    "testMatch": [
      "**/__tests__/**/*.js?(x)"
    ]
  },
  "standard": {
    "parser": "babel-eslint"
  }
}
